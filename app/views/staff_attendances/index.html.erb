<div class="box">
	<div class="box-head">
		<h2 class="left">Staff Attendance</h2>
		<div class="right">
		</div>
	</div>
</div>
  
<div class="indextable">
	<div class="pagination">
		<%= will_paginate @staff_attendances %>  
	</div>

<h1>Listing staff_attendances</h1>

<table>
  <tr>
		<th>Flag</th>
    <th>Staff Name</th>
    <th>Logged at</th>
    <th>Log type</th>
    <th>Trigger</th>
		<th>Test</th>
    <th colspan=3>Control</th>
  </tr>
	<% form_tag do %>
	<% @staff_attendance_days.keys.sort.reverse.each do |date| %>
		<tr><td colspan=8><BR><b>Date  : <%= date unless date.blank? %></b></td></tr>
		

		<% for staff_attendance in @staff_attendance_days[date].sort_by{|e| e[:thumb_id]} %>
		<% if staff_attendance.attended.blank? %> 
		<% else %>
		  <tr>
				<td><%=h staff_attendance.r_u_late == "flag" ? image_tag("flag_red.png") : "" %></td>
		    <td><%=h staff_attendance.attendee_details %></td>
		    <td><%=h staff_attendance.logged_at.in_time_zone('UTC') %></td>
		    <td><%=h staff_attendance.log_type = "I" ? "IN" : "OUT" %></td>
		    <td><%= radio_button :trigger, true, id %><%=h staff_attendance.trigger %></td>
				<td><%=h staff_attendance.timmy2 %></td>
		    <td><%= link_to 'Show', staff_attendance %></td>
		    <td><%= link_to 'Edit', edit_staff_attendance_path(staff_attendance) %></td>
		    <td><%= link_to 'Destroy', staff_attendance, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
			<% end %>
			<% end %>
			
	<!--	<#% end %>-->
	<% end %>
	<% end %>
</table>
</div>
<br />

<%= link_to 'New staff_attendance', new_staff_attendance_path %>