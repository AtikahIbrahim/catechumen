<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Locations</h2>
		<div class="right">
			<% form_tag residences_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", :name => nil %>
			<% end %>
		</div>
  </div>
</div>

<div class="tlist">
<table width=100% border="0" cellpadding="0" cellspacing="0">
	<tr>
  	<th>Location Code</th>
    <th>Location Name</th>
		<th>Location Class</th>
    <th>Location Type Description</th>
    <th colspan=4 class="ac">Control</th>
  </tr>

  <% @locations.each do |location| %>
  <tr>
  	<td><%=h location.code %>
				<%= link_to "(+)", new_location_path(:parent_id => location) %></td>
  	<td><%=h location.name %></td>
		<td><%=h (Location::CLASS.find_all{|disp, value| value == location.lclass}).map {|disp, value| disp} %></td>
		<td><%=h (Location::TYPE.find_all{|disp, value| value == location.type}).map {|disp, value| disp} %></td>
    <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => location %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => location %></td>
    <td width=10px><%= link_to image_tag("duplicate.png", :border => 0, :title => 'Add Asset'), :action => 'addasset', :id => location %></td>
    <td width=5px><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>
</div>
<br />

<%= link_to "Location Tree", indextree_locations_path %>
<%= link_to 'New location', new_location_path %>