<h3>New Leave For Staff</h3>

<% form_for(@leaveforstaff) do |f| %>
  <%= f.error_messages %>

 	<div class="tform">
	  <table width=100% >

		<tr>
			<th colspan = 2>Staff Leave Request Details</th>
		</tr>

		<tr>
			<td class="leftcol"><label for="staff_id"><b>Staff Name:</b></label></td>
			<td><%= f.collection_select :staff_id, Staff.find(:all), :id, :position_with_name, :include_blank => true %></td>
		</tr>

		<tr>
		<td class="leftcol"><label for="leavetype"><b>Leave Type:</b></label></td>
			<td><%= f.select :leavetype, 
			                 Leaveforstaff::STAFFLEAVETYPE,
			                 :prompt => "Select"  %></td>
		</tr>

		<tr>
		    <td class="leftcol"><label for="leavestartdate"><b>Leave Start Date:</b></label></td>
			<td><%= f.date_select :leavestartdate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
		</tr>

		<tr>
		    <td class="leftcol"><label for="leavenddate"><b>Leave End Date:</b></label></td>
			<td><%= f.date_select :leavenddate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
		</tr>

		<tr>
		    <td class="leftcol"><label for="reason"><b>Reason:</b></label></td>
			<td><%= f.text_field :reason %></td>
		</tr>
		<tr>
		    <td class="leftcol"><label for="notes"><b>Notes:</b></label></td>
			<td><%= f.text_area :notes, :size => "30x5" %></td>
		</tr>
  </table>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', leaveforstaffs_path %>
</div>