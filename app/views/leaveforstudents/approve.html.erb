<h3>Approve Staff Leave</h3>

<% form_for(@leaveforstudent) do |f| %>
  <%= f.error_messages %>

<div class="tform">
  <table width=100% >
  	<%= render :partial => 'applyshow' %>
<tr>
	<th colspan = 2>Approve Student Leave Request</th>
</tr>
<tr>
	<td class="leftcol"><label for="approved"><b>Approve Student Leave:</b></label></td>
	<td><%= f.radio_button :approved,'false' %>Not Approved &nbsp<%= f.radio_button :approved,'true' %>Approve</td>
</tr>
<tr>
	<td class="leftcol"><label for="staff_id"><b>Approved By:</b></label></td>
	<td><%= f.collection_select :staff_id, Staff.find(:all, :conditions => ['id =?', User.current_user.staff.id]), :id, :mykad_with_staff_name %></td>
</tr>
<tr>
   <td class="leftcol"><label for="approvedate"><b>End Date:</b></label></td>
	<td><%= f.date_select :approvedate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
</tr>

  </table>
</div>
  <p>
    <%= f.submit 'Update' %>
  </p>

<% end %>

<%= link_to 'Show', @leaveforstudent %> |
<%= link_to 'Back', leaveforstudents_path %>
