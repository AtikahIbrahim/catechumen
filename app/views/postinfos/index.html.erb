<div class="box">
	<div class="box-head">
		<h2 class="left"><%= t 'postinfos.list'%></h2>
	</div>
</div>

<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => 'New Postion Info') + "New", new_postinfo_path %></p>
</div>

<div class="indextable">
	<table>
	  <tr>
	      <th><%= t 'postinfos.details'%></th>
		  <th><%= t 'postinfos.position'%></th>
	      <th><%= t 'postinfos.staffgrade_id'%></th>
	      <th><%= t 'postinfos.post_count'%></th>
		  <th colspan=2 class="ac">Control</th>
	  </tr>

	<% @postinfos.sort_by(&:details).each do |postinfo| %>
	  <tr>
	      <td><%=h postinfo.details %></td>
		  <td><%=h postinfo.positions.blank? ? "" : postinfo.positions[0].name %></td>
	      <td><%=h postinfo.employgrade.name %></td>
	      <td><%=h postinfo.post_count %></td>

  		<td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), edit_postinfo_path(postinfo) %></td>
			<td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), postinfo, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

<br />