<div class="usesupply">
	<% new_or_existing = usesupply.new_record? ? 'new'  : 'existing' %>
	<% prefix = "supplier[#{new_or_existing}_usesupply_attributes][]" %>
	
	<% fields_for prefix, usesupply do | usesupply_form | -%>

    <table width=100%>
	   <tr>
		
	     <td width=200px><%= usesupply_form.collection_select :issuedby, Staff.find(:all), :id, :name%></td>
         <td width=220px><%= usesupply_form.collection_select :receivedby, Staff.find(:all), :id, :name%></td>
         <td width=180px><%= usesupply_form.text_field :quantity, :size => 10 %></td>
         <td width=350px><%= usesupply_form.text_field :issuedate, :size => 12 %></td>
         <td width=10px><%= link_to_function "remove", "$(this).up('.usesupply').remove()" %></td>
       </tr>
    </table>
    
   
   <% end -%>
</div>