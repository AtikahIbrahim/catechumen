<div class="tform">
	<H2>Disposals Details</H2>
  <table width=100% >
			<tr>
				<td class="leftcol"><label for="asset_id"><b>Asset Code:</b></label></td>
				<td><%=h @disposal.asset_id.blank? ? "" : @disposal.asset.assetcode %></td>
			</tr>
			<tr>
				<td class="leftcol"><label for="asset_id"><b>Asset Name:</b></label></td>
				<td><%=h @disposal.asset.typename %> / <%=h @disposal.asset.name %> / <%=h @disposal.asset.modelname %></td>
			</tr>	
			
			<tr>
				<td class="leftcol"><label for="used"><b>Purchased:</b></label></td>
				<td><%=h @disposal.asset.purchasedate.strftime("%d %B %Y") unless @disposal.asset.purchasedate.blank? %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="used"><b>Used:</b></label></td>
				<td><%=h @disposal.used? ? "Used" : "New" %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="usedduration"><b>Age/Duration Used</b></label></td>
				<td><%=h @disposal.age %> days</td>
			</tr>
			
			<tr>
				<td class="leftcol"><label for="currentvalue"><b>Purchase Value:</b></label></td>
				<td><%=h ringgols(@disposal.asset.purchaseprice) %> <%=  %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="currentvalue"><b>Current Value:</b></label></td>
				<td><%=h ringgols(@disposal.currentvalue) %></td>
			</tr>
			
			<tr>
				<td class="leftcol"><label for="currentvalue"><b>Depreciation:</b></label></td>
				<td><%=h ringgols(@disposal.depreciation_value) %> OR <%= number_to_percentage(@disposal.depreciation_percent, :precision => 2) %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="opinion"><b>Opinion:</b></label></td>
				<td><%=h @disposal.opinion %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="recommendation"><b>Recommendation:</b></label></td>
				<td><%=h @disposal.recommendation %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="gift"><b>Gift:</b></label></td>
				<td><%=h @disposal.gift? ? "Gift" : "No" %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="status"><b>Status:</b></label></td>
				<td><%=h @disposal.status? ? "Pending" : "Disposed" %></td>
			</tr>
	
</table>
<BR>
</div>
	
<%= link_to 'Edit', edit_disposal_path(@disposal) %> |
<%= link_to 'Back', disposals_path %>