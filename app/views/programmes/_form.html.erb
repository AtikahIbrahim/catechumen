<script type="text/javascript">
  $j(document).ready(function(){
      $j("#programme_course_type").change(function() {  
          if (this.value=='Topic')
             $j('.bbb').show(); 
          else if (this.value=='Subtopic')
            $j('.bbb').show();
          else
            $j('.bbb').hide();
      });
      $j("#programme_course_type").each(function() {  
          if (this.value=='Topic')
             $j('.bbb').show(); 
          else if (this.value=='Subtopic')
            $j('.bbb').show();
          else
            $j('.bbb').hide();
      });
   });
</script>