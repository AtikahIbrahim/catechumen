<% form_for(@asset_disposal) do |f| %>
  <%= f.error_messages %>
	<div class="tform">
		<%= render :partial => 'show_process' %>
		<H2><%= t('disposal.revalue_asset') %></H2>
		<table width=85% >
				<tr>
					<td class="leftcol"><label for="asset_id"><%= t('disposal.new_value') %></label></td>
					<td><%= f.text_field :revalue, :placeholder => 'RM' %></td>
				</tr>
				
				<tr>
					<td class="leftcol"><label for="processed_by"><%= t('disposal.revalueby') %></label></td>
					<td><%= f.collection_select :revalued_by, Staff.find(:all, :conditions => ["id = ?", current_login.staff_id]), :id, :staff_name_with_position %></td>
				</tr>
				
				<tr>
					<td class="leftcol"><label for="processed_by"><%= (t 'datelabel') %></label></td>
					<td><%= f.date_select :revalued_on %></td>
				</tr>
		</table>
	</div>
	
	<p>
    <%= f.submit (t 'update') %>
  </p>
<% end %>


<%= link_to (t 'show'), @asset_disposal %> |
<%= link_to (t 'back'), asset_disposals_path %>