<div class="tform">
<h3><%= t('asset.current_asset') %></h3>
  <table width=100%>
	
	<tr>
		<td><% f.text_field :assettype,  :value => 2 %></td>
	</tr>

	<tr>
		<td class="leftcol"><label for="assetcode"><%= t('asset.registration_serialno') %>:</label></td>
		<td><%= f.text_field :assetcode, :size => '50' %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="cardno"><%= t('asset.card_no') %>:</label></td>
		<td><%= f.text_field :cardno %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="dept_id"><%= t('asset.depart') %>:</label></td>
		<td><%= f.text_field :dept_id %></td>
	</tr>

	<tr>
	<td class="leftcol"><label for="bookable"><%= t('asset.bookable') %>:</label></td>
      <td><%= f.check_box :bookable %> This item can be booked </td>
	</tr>

	
	
<!--Asset Details-->

	<tr>
		<th colspan = 2><%= t('asset.asset_details') %></th>
	</tr>
		<tr>
			<td class="leftcol"><label for="name"><%= (t 'name') %>:</label></td>
			<td><%= f.text_field :name %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="cardno"><%= t('asset.category') %>:</label></td>
			<td><%= f.text_field :category %></td>
		</tr>

		<tr>
		    <td class="leftcol"><label for="manufacturer_id"><%= t('asset.manufacturer') %>:</label></td>
	      <td><%= f.collection_select :manufacturer_id, AddressBook.find(:all), :id, :name, :include_blank => true %>add link add manufacturer</td>
		</tr>
		
		<tr>
			<td class="leftcol"><label for="model">Model:</label></td>
			<td><%= f.text_field :modelname %> (FA)</td>
	  </tr>
				
		<tr>
			<td class="leftcol"><label for="serialno"><%= t('asset.serial_no') %>:</label></td>
	    	<td><%= f.text_field :serialno %>  (FA)</td>
		</tr>
    <!--  Show Group based on locassigned true -->
		<!-->
		<tr>
			<td class="leftcol"><label for="locassigned">Location Assigned:</label></td>
			<td><#%= f.radio_button :locassigned,'false' %>Yes<#%= f.radio_button :locassigned,'true' %>No</td>
		</tr>
		<-->					
		<tr>
			<td class="leftcol"><label for="location_id"><%= t('menu.locations') %>:</label></td>
			<td><%= f.collection_select :location_id, Location.find(:all), :id, :location_list, :include_blank => true %> (FA, CF) (show with Assign Location)</td>
		</tr>
			
		<tr>
			<td class="leftcol"><label for="assignedto_id"><%= t('asset.assigned_to') %>:</label></td>
			<td><%= f.collection_select :assignedto_id, Staff.find(:all), :id, :name, :include_blank => true %></td>
		</tr>
		<!--  Group End -->
		<tr>
			<td class="leftcol"><label for="status">Status:</label></td>
	    	<td><%= f.text_field :status %> </td>
		</tr>
					
		<tr>
			<td class="leftcol"><label for="otherinfo"><%= t('asset.other_info') %>:</label></td>
			<td><%= f.text_area :otherinfo, :size => "30x7" %></td>
		</tr>

		         
<!--Purchasing Information-->
<tr>
  <th colspan=2><%= t('asset.purchasing_info') %></th>
</tr>

	<tr>
		<td class="leftcol"><label for="orderno"><%= t('asset.order_no') %>:</label></td>
		<td><%= f.text_field :orderno %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="purchaseprice"><%= t('asset.purchase_price') %>:</label></td>
		<td><b>RM</b> <%= f.text_field :purchaseprice, :size => 12 %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="purchasedate"><%= t('asset.purchase_date') %>:</label></td>
		<td><%= f.date_select :purchasedate, :start_year => 2000, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="receiveddate"><%= t('asset.date_received') %>:</label></td>
		<td><%= f.date_select :receiveddate, :start_year => 2000, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
	
	<tr>
	<td class="leftcol"><label for="receiver_id"><%= t('asset.received_by') %>:</label></td>
      <td><%= f.collection_select :receiver_id, Staff.find(:all), :id, :name, :include_blank => true %></td>
	</tr>
	
	<tr>
	<td class="leftcol"><label for="supplier_id"><%= t('asset.supplier') %>:</label></td>
      <td><%= f.collection_select :supplier_id, AddressBook.find(:all), :id, :name, :include_blank => true %></td>
	</tr>
	
</table>
<BR>
</div>