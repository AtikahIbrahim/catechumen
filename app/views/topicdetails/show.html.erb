<div class="tform">

<fieldset>
	<legend class='togvis'><%=t('topicdetail.title2')%></legend>
		<table width=85% >
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.topic')%>:</label></td>
				<td>
					<% unless @topicdetail.topic_code.blank? %><!--31 Oct 2013-->
						<% @topic_id_programme = Programme.all.map(&:id).uniq %>
						<% if @topic_id_programme.include?(@topicdetail.topic_code)%>
							<%=h @topicdetail.subject_topic.semester_subject_topic %>
						<% else %>
							<font color=red><strong><%=t('topicdetail.remove_topic_before')%></strong></font>
						<% end %>
					<% else %>
						<font color=red><strong><%=t('topicdetail.remove_topic_after')%></strong></font>
					<% end %>
					<%#=h @topicdetail.topic_code.blank? ?  "" :  @topicdetail.subject_topic.semester_subject_topic %><!--31 Oct 2013-->
					<%#=h @topicdetail.subject_topic.semester_subject_topic %></td>				
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.duration')%>:</label></td>
				<td><%=h @topicdetail.duration.try(:strftime,'%H:%M') %>  (<%=t('time.hours').titleize%> : <%=t('time.minutes').titleize%>)</td>				
			</tr>		  
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.version_no')%>:</label></td>
				<td><%=h @topicdetail.version_no %></td>
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.objctives')%>:</label></td>
				<td><%=h simple_format(@topicdetail.objctives) %></td>
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.content')%>:</label></td>
				<td><%=h simple_format(@topicdetail.contents) %></td>
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('training_note.title')%>:</label></td>
				<% count=0%>
				<td><% for trainingnote in @topicdetail.trainingnotes %>
						<%=count+=1%>-<%= trainingnote.title %> : <%=trainingnote.document_file_name%><br>
					<% end %>
				</td>				
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.theory')%>:</label></td>
				<td><%=h @topicdetail.theory.try(:strftime, '%H:%M') %> (<%=t('time.hours').titleize%> : <%=t('time.minutes').titleize%>)</td>				
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.tutorial')%>:</label></td>
				<td><%=h @topicdetail.tutorial.try(:strftime, '%H:%M') %> (<%=t('time.hours').titleize%> : <%=t('time.minutes').titleize%>)</td>				
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('topicdetail.practical')%>:</label></td>
				<td><%=h @topicdetail.practical.try(:strftime, '%H:%M') %> (<%=t('time.hours').titleize%> : <%=t('time.minutes').titleize%>)</td>				
			</tr>
		</table>
</fieldset>
</div>			
<!--31 Oct 2013--><% unless @topicdetail.topic_code.blank? %><!--31 Oct 2013-->
<%= link_to t('edit'), edit_topicdetail_path(@topicdetail) %> |<% end %>
