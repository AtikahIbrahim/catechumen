<h1>Editing bank</h1>

<% form_for(@bank) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :short_name %><br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :long_name %><br />
    <%= f.text_field :long_name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @bank %> |
<%= link_to 'Back', banks_path %>